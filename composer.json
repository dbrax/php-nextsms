{
    "name": "epmnzava/nextsms",
    "description": "PHP package for easy integration with NextSms Bulk SMS Solution",
    "keywords": [
        "epmnzava",
        "nextsms"
    ],
    "homepage": "https://github.com/epmnzava/nextsms",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Emmanuel Mnzava",
            "email": "epmnzava@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Epmnzava\\Nextsms\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Epmnzava\\Nextsms\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
